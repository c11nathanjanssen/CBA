-title "House District/Legislators"

%p{:style => "text-align: center"}
  %b= "112th Congress"

= form_tag legislators_path, :method => 'get' do
  %p.search{:align => "center"}
    = text_field_tag :legislator_search, params[:legislator_search]
    = submit_tag "Search", :name => nil

%div#legislators_table
  = render :partial => 'legislators_table', :locals => {:legislator => @legislator}

%p{:style => "text-align: center"}
  = "Roll Call pp Popularity Search"

= will_paginate @bills

%table.center{:align => "center"}
  %tr
    %th Bill
    %th Congressional Vote
    %th Result
  - @bills.each do |bill|
    %tr
      %td= link_to bill.short_title, bill_path(bill)
      %td= "something like bill.display_results"
      %td= "bill.result"

