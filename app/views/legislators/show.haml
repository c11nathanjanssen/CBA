%p#notice= notice

- title "112th Congress: #{@district.name} -- #{@legislator.full_name}"

%p.center
  = image_tag @legislator.image_location_medium

%p.center
  = @legislator.party

%p.center
  = "Roll Call Popularity Search"

%br/

= will_paginate @bills

%table.center{align: "center", width: "100%"}
  %tr
    %th.first_column Bill
    %th #{@legislator.state} #{@legislator.district}
    %th= @legislator.last_name
    %th Result
  - @legislator.bills.each do |bill|
    %tr
      %td= link_to bill.bill_title, bill_path(bill)
      %td= short_tally(@district.get_votes_tally(bill))
      %td= bill.find_member_vote(@legislator) == :aye ? "For" : "Against"
      %td= bill.passed? ? "Passed" : "Failed"

-#    <!-- need to check for the condition that they have no bills -->
-#
-#= render :partial => 'bills/comments_subpage', :locals => {:legislator => @legislator}

%br/
%p{:align => "center"}
  %b= "Group Members"
  = "Drop-Down Box Search"

%table.center{:align => "center"}
  %tr
    %th Name
    %th Pic
    %th Member Since
  - @members.each do |u|
    %tr
      %td= u.name
      %td= image_tag u.avatar
      %td= u.created_at.stamp("Oct, 1999")

%br/
%p{:align => "center"}
  %b= "Group Followers"
  = "Drop-Down Box Search"
= unless @followers.blank?
  %table.center{:align => "center"}
    %tr
      %th Name
      %th Pic
      %th Member Since
    - @followers.each do |u|
      %tr
        %td= u.name
        %td= image_tag u.avatar_url(:thumb)
        %td= u.created_at.stamp("Oct, 1999")
- else
  = @district.name
  has no followers.
