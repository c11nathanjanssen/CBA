<h1>Bills Admin View</h1>
<%# javascript 'endless_page' %>

  <%= will_paginate @bills %>

<% @bills.each do |bill| %>
    <h3><%= bill.bill_title %></h3>
    <p> by <%= bill.sponsor.full_title %><br>

    <p><%= link_to 'Show', bill %> |
    <%= link_to 'Edit', edit_bill_path(bill) %> |
    <%= link_to 'Destroy', bill, :confirm => 'Are you sure?', :method => :delete %></p>
    <hr>
<% end %>

  <%= will_paginate @bills %>

<br>

<%= link_to 'New Bill', new_bill_path %>
