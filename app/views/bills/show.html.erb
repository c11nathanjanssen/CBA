<p id="notice"><%= notice %></p>

<p>
  <b>Congress:</b>
  <%= @bill.congress %>
</p>

<p>
  <b>Bill:</b>
  <%= @bill.full_number %>
</p>

<%= determine_vote(current_user).html_safe %>

<%# unless @bill.tally.empty? %>
<p>
  <b>Tally:</b>
  <%= @bill.descriptive_tally.html_safe %>
</p>
<%# end %>

<% if @bill.short_title %>
<p>
  <b>Short title:</b>
  <%= @bill.short_title %>
</p>
<% end %>

<p>
  <b>Official title:</b>
  <%= @bill.official_title %>
</p>

<% if @bill.summary %>
<p>
  <b>Summary:</b>
  <%= @bill.summary %>
</p>
<% end %>

<p>
  <b>Last action on:</b>
  <%= @bill.last_action_on %>
</p>

<p>
  <b>Last action text:</b>
  <%= @bill.last_action_text %>
</p>

<% unless @bill.enacted_on.nil? %>
<p>
  <b>Enacted on:</b>
  <%= @bill.enacted_on %>
</p>
<% end %>

<p>
  <b>Average rating:</b>
  <%= @bill.average_rating %>
</p>

<p>
  <b>Sponsor:</b>
  <%= link_to @bill.sponsor.full_title, legislator_path(@bill.sponsor) %>
</p>

<p>
  <b>Cosponsors count:</b>
  <%= @bill.cosponsors_count %>
</p>

<p>
  <b>Bill html:</b>
  <%= @bill.bill_html.html_safe %>
</p>

<p>
  <b>Summary word count:</b>
  <%= @bill.summary_word_count %>
</p>

<p>
  <b>Text word count:</b>
  <%= @bill.text_word_count %>
</p>

<p>
  <b>State:</b>
  <%= @bill.state %>
</p>

<p>
  <b>Text updated on:</b>
  <%= @bill.text_updated_on %>
</p>



<%= link_to 'Edit', edit_bill_path(@bill) %> |
<%= link_to 'Back', bills_path %>
