%p
  %strong= page_template.name
  %em= "."+ page_template.css_class
  - if can?(:manage,page_template)
    %p
      = link_to( t(:edit), edit_page_template_path(page_template), :class => 'button edit small')
      = link_to( t(:delete), page_template, :method => :delete,  :confirm => t(:are_you_sure), :class => 'button delete small')
  = ContentItem::markdown( "\n```html\n"+ page_template.html_template||'EMPTY'  +"\n```\n" )