- title t("userlist.user_profile", :name => @user.name )

- if @user.avatar
    %div{ :style => 'float: right;' }=  link_to_function(     |
       image_tag( w3c_url(@user.avatar_url(:thumb)) ),        |
       "image_popup('#{w3c_url(@user.avatar_url(:popup))}')") |

%div User: #{@user.name}

- if user_signed_in?
    %h3= t(:your_account)
    %ul
        %li
            - if current_user == @user || current_user.role?(:admin  )
                = link_to t(:edit_profile), edit_registration_path(@user)
    %h3 Find your district and get started
    = link_to "Your geocode page", users_geocode_path
    %h3 Your Polco Groups
    %div#polco_groups
        = link_to "Update your groups", manage_groups_path
        %h4 Groups you are following:
        = links_to_groups(@user.followed_groups)
        %h4 Groups you joined:!
        = links_to_groups(@user.joined_groups).html_safe
    %div
        %strong= t(:invite_user)
        %ul
            %li
                = link_to t(:send_invitaiton), new_user_invitation_path(current_user), :id => 'invitation_link'
