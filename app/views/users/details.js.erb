$('#user_information_<%= @user.id.to_s -%>').html('<%=
  escape_javascript( render :partial => "user_detail", :locals => {:user => @user} )
-%>').show().dialog({
  width: '800px', position: 'center', 
  closeText: 'Close', 
  title: '<%= @user.name -%>',
  dialogClass: 'notice',
  buttons: { "Ok": function() { $(this).dialog("close"); } } 
});

